<div class="message-input-container">
  <form class="new-message">
    <input class="message-input" type="text" placeholder="message">
    <input class="submit-message" type="submit" value="Submit">
  </form>
</div>
<div class="past-messages-display">
  <ul class="past-messages">

    {{#each this}}
    <li>
      <h3>{{username}}</h3>
      <h4>{{created_at}}</h4>
      <p>{{content}}</p>
    </li>
    {{/each}}
  </ul>
</div>
